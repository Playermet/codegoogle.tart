import tart.testing.Test;

@EntryPoint
def main(args:String[]) -> int32 {
  return Test.run(StructTest);
}

// TODO: Arrays and native arrays of structs.
// TODO: Struct pointers.
// TODO: Structs in unions and tuples.

struct Point {
  var x:int32;
  var y:int32;
  var z:int32 = 1;
}

struct LargePoint {
  var x:int64;
  var y:int64;
  var z:int64 = 1;
}

struct TwoPoints {
  var pt:Point;
  var lp:LargePoint;
  
  def construct() {}

  def construct(pt:Point, lp:LargePoint) {
    self.pt = pt;
    self.lp = lp;
  }
}

def triple(p:Point) -> Point {
  return Point(p.x * 3, p.y * 3, p.z * 3);
}

def triple(p:LargePoint) -> LargePoint {
  return LargePoint(p.x * 3, p.y * 3, p.z * 3);
}

class StructTest : Test {
	def testVarInitDefaultConstructor() {
	  var p = Point();
	  assertEq(0, p.x);
	  assertEq(0, p.y);
	  assertEq(1, p.z);
  }
  
  def testLetInitDefaultConstructor() {
	  let p = Point();
	  assertEq(0, p.x);
	  assertEq(0, p.y);
	  assertEq(1, p.z);
	}
	
	def testVarInitConstructorArgs() {
	  var p = Point(1, 2, 3);
	  assertEq(1, p.x);
	  assertEq(2, p.y);
	  assertEq(3, p.z);
  }
  
  def testLetInitConstructorArgs() {
	  let p = Point(1, 2, 3);
	  assertEq(1, p.x);
	  assertEq(2, p.y);
	  assertEq(3, p.z);
	}
	
	def testVarInitConstructorKwdArgs() {
	  var p = Point(z=1, x=2, y=3);
	  assertEq(2, p.x);
	  assertEq(3, p.y);
	  assertEq(1, p.z);
  }
  
  def testLetInitConstructorKwdArgs() {
	  let p = Point(z=1, x=2, y=3);
	  assertEq(2, p.x);
	  assertEq(3, p.y);
	  assertEq(1, p.z);
	}
	
	def testConstructorLarge() {
	  var p = LargePoint(1, 2, 3);
	  assertEq(1, p.x);
	  assertEq(2, p.y);
	  assertEq(3, p.z);
	}
	
	def testAssign() {
	  var p = Point(z=1, x=2, y=3);
	  var p2 = p;
	  assertEq(2, p2.x);
	  assertEq(3, p2.y);
	  assertEq(1, p2.z);
	  
	  var p3:Point;
	  p3 = p;
	  assertEq(2, p3.x);
	  assertEq(3, p3.y);
	  assertEq(1, p3.z);
	  
	  let p4 = Point(8, 8, 8);
	  p3 = p4;
	  assertEq(8, p4.x);
	  assertEq(8, p4.y);
	  assertEq(8, p4.z);
	}
	
	def testAssignLarge() {
	  var p = LargePoint(z=1, x=2, y=3);
	  var p2 = p;
	  assertEq(2, p2.x);
	  assertEq(3, p2.y);
	  assertEq(1, p2.z);
	  
	  var p3:LargePoint = LargePoint(0, 0, 0);
	  p3 = p;
	  assertEq(2, p3.x);
	  assertEq(3, p3.y);
	  assertEq(1, p3.z);
	
	  let p4 = LargePoint(8, 8, 8);
	  p3 = p4;
	  assertEq(8, p4.x);
	  assertEq(8, p4.y);
	  assertEq(8, p4.z);
	}
	
	// TODO: Fix default construction of struct fields.
	def DISABLED_testStructDefaultMemberConstruction() {
	  // Default constructor
	  var tp:TwoPoints = TwoPoints();
    var p = tp.pt;
    
    //assertEq(0, p.x);
    //assertEq(0, p.y);
    //assertEq(1, p.z);

	  //var tp:TwoPoints = TwoPoints(Point(1, 1, 1), LargePoint(2, 2, 2));
	}
	
  def testStructExplicitMemberConstruction() {
    // Default constructor
    var tp:TwoPoints = TwoPoints(Point(1, 2, 3), LargePoint(4, 5, 6));
    assertEq(1, tp.pt.x);
    assertEq(2, tp.pt.y);
    assertEq(3, tp.pt.z);
    assertEq(4, tp.lp.x);
    assertEq(5, tp.lp.y);
    assertEq(6, tp.lp.z);
  }
  
	def testAssignFromStructMember() {
    var tp:TwoPoints = TwoPoints(Point(1, 2, 3), LargePoint(4, 5, 6));
    let pt = tp.pt;
    let lp = tp.lp;
    assertEq(1, pt.x);
    assertEq(2, pt.y);
    assertEq(3, pt.z);
    assertEq(4, lp.x);
    assertEq(5, lp.y);
    assertEq(6, tp.lp.z);
	}
	
	def testAssignToStructMember() {
    var tp:TwoPoints = TwoPoints(Point(1, 2, 3), LargePoint(4, 5, 6));
    tp.pt = Point(11, 12, 13);
    tp.lp = LargePoint(14, 15, 16);
    assertEq(11, tp.pt.x);
    assertEq(12, tp.pt.y);
    assertEq(13, tp.pt.z);
    assertEq(14, tp.lp.x);
    assertEq(15, tp.lp.y);
    assertEq(16, tp.lp.z);
	}

  def testParamAndReturn() {
    let pt = triple(Point(1, 2, 3));
    let lp = triple(LargePoint(1, 2, 3)); 
    assertEq(3, pt.x);
    assertEq(6, pt.y);
    assertEq(9, pt.z);
    assertEq(3, lp.x);
    assertEq(6, lp.y);
    assertEq(9, lp.z);
  }

  def testNestedParamAndReturn() {
    let pt = triple(triple(Point(1, 2, 3)));
    let lp = triple(triple(LargePoint(1, 2, 3))); 
    assertEq(9, pt.x);
    assertEq(18, pt.y);
    assertEq(27, pt.z);
    assertEq(9, lp.x);
    assertEq(18, lp.y);
    assertEq(27, lp.z);
  }

  def testCallMember() {
    assertEq(3, triple(Point(1, 2, 3)).x);
    assertEq(6, triple(Point(1, 2, 3)).y);
    assertEq(9, triple(Point(1, 2, 3)).z);
    assertEq(3, triple(LargePoint(1, 2, 3)).x);
    assertEq(6, triple(LargePoint(1, 2, 3)).y);
    assertEq(9, triple(LargePoint(1, 2, 3)).z);
  }
}
