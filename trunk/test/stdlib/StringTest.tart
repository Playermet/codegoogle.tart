@EntryPoint
def main(args:String[]) -> int {
  testStringLiteral();
  stringComparisonTest();
  stringGetCharTest();
  stringFromArrayTest();
  stringConcatenationTest();
  testUnicode();
  testToCharArray();
  return 0;
}

def testStringLiteral() {
  let s = "Hello";
  Debug.assertTrue(5 == s.length);
  Debug.assertFalse(s.isEmpty);
  Debug.assertTrue("".isEmpty);
  Debug.assertFalse("a".isEmpty);
}

def stringComparisonTest() {
  let s = "Hello";
  let t = "Goodbye";
  Debug.assertTrue(s == s);
  Debug.assertFalse(s == t);
  Debug.assertTrue(s == "Hello");
  Debug.assertFalse(s == "Goodbye");
//  Debug.assertTrue(s != "Yello");
  
  // TODO: Test !=
}

def stringGetCharTest() {
  let s = "Hello";
  Debug.assertTrue(s[0] == 'H');
  Debug.assertTrue(s[1] == 'e');
}

def stringFromArrayTest() {
  let a = ubyte[](0); // Zero-length array
  let s = String(a);
  Debug.assertTrue(s == "");
}

def stringToStringTest() {
  // TODO: Type inference problem.
  Debug.assertEq("Hello", "Hello".toString());
}

def stringConcatenationTest() {
  let s = String.concat("This", "Is", "A", "Test");
  Debug.assertEq(11, s.length);
  Debug.assertEq("ThisIsATest", s);
}

def testUnicode() {
  Debug.assertEq(2, "\u0200".length);
  Debug.assertEq(1, "\u0200".charLength());
  Debug.assertEq(6, "Test\u0200".length);
  Debug.assertEq(5, "Test\u0200".charLength());
  Debug.assertEq(3, "\u2100".length);
  Debug.assertEq(1, "\u2100".charLength());
  Debug.assertEq(6, "\u2100\u2100".length);
  Debug.assertEq(2, "\u2100\u2100".charLength());
  Debug.assertEq(4, "\U20000".length);
  Debug.assertEq(1, "\U20000".charLength());
}

def testToCharArray() {
  let s = "Hello";
  let a = s.toCharArray();
  Debug.assertEq(5, a.length);
  Debug.assertEq('H', a[0]);
  Debug.assertEq('e', a[1]);
  Debug.assertEq('l', a[2]);
  Debug.assertEq('l', a[3]);
  Debug.assertEq('o', a[4]);

  let s2 = "\u2100";
  let a2 = s2.toCharArray();
  Debug.assertEq(1, a2.length);
  Debug.assertEq('\u2100', a2[0]);
}
