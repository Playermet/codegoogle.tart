/** A reference to a mutable value. Use for implementing closure cells, among other things. */
class MutableRef[%T] : Ref[T] {
  var _value:T;
  
  def construct(value:T) {
    self._value = value;
  }
  
  override value:T {
    get { return _value; }
    set { _value = value; }
  }

  /** Return a string representation of the contained value. */
  override toString() -> String {
    return String(self._value);
  }
}
